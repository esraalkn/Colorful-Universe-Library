@model Colorful_Universe_Library.Models.Entity.TBLKITAP
@{
    ViewBag.Title = "ComeBook";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>UPDATE BOOK</h2>

@using (Html.BeginForm("UpdateBook", "Books", FormMethod.Post))
{
    <div style="margin-top:15px"></div>

    <div class="form-group">

        <div>
            <label>ID</label>
            @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        </div>
        
        <div>
            <label>Name Of Book</label>
            @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        </div>
        
        <div>
            <label>Category Of Book</label>
            @Html.DropDownListFor(k => k.TBLKATEGORI.ID, (List<SelectListItem>)ViewBag.vl2, new { @class = "form-control" })
        </div>
        
        <div>
            <label>Writer Of Book</label>
            @Html.DropDownListFor(k => k.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.vl3, new { @class = "form-control" })
        </div>
        
        <div>
            <label>Publisher Of Book</label>
            @Html.TextBoxFor(k => k.YAYINEVI, new { @class = "form-control" })
        </div>
        
        <div>
            <label>Publish Year Of Book</label>
            @Html.TextBoxFor(k => k.BASIMYIL, new { @class = "form-control" })
        </div>
        
        <div>
            <label>Page Count</label>
            @Html.TextBoxFor(k => k.SAYFASAYISI, new { @class = "form-control" })
        </div>
        
        <br />

    </div>

    <div style="margin-top:15px">
        <button class="btn btn-warning">UPDATE</button>
    </div>


}

