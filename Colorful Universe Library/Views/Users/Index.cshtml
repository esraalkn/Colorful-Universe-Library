@using Colorful_Universe_Library.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLUYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>USERS PAGE</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>User's Name</th>
        <th>User's Surname</th>
        <th>User's Email</th>
        <th>User's Nick</th>
        <th>User's Password</th>
        <th>User's Telephone Number</th>
        <th>User's School Name</th>
        <th>DELETE</th>
        <th>UPDATE</th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>@user.ID</td>
            <td>@user.AD</td>
            <td>@user.SOYAD</td>
            <td>@user.MAIL</td>
            <td>@user.KULLANICIADI</td>
            <td>@user.SIFRE</td>
            <td>@user.TELEFON</td>
            <td>@user.OKUL</td>
            <td> <a class="btn btn-danger" href="/Users/DeleteUser/@user.ID">DELETE</a></td>
            <td> <a class="btn btn-warning" href="/Users/ComeUser/@user.ID">UPDATE</a></td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model , Sayfa => Url.Action("Index", new { Sayfa }))

<a class="btn btn-info" href="/Users/AddUser">ADD USER</a>



